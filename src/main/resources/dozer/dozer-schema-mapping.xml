	<!-- Custom fields for 'Profile' to 'ProfileDTO' mapping. -->
	<mapping wildcard="true">
		<class-a>org.sigmah.server.domain.profile.Profile</class-a>
		<class-b>org.sigmah.shared.dto.profile.ProfileDTO</class-b>
		

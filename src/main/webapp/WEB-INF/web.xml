<!DOCTYPE web-app
   PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Sigmah</display-name>

	<!-- Guice -->
	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.sigmah.server.inject.ServletContextListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>ExportCalendar</servlet-name>
		<display-name>ExportCalendar</display-name>
		<description>Export Sigmah calendar events in iCal format</description>
		<servlet-class>org.sigmah.client.ui.presenter.project.export.ExportCalendar</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ExportCalendar</servlet-name>
		<url-pattern>/ExportCalendar</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>

</web-app>
